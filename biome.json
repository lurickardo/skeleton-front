{
	"$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noShadowRestrictedNames": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noUselessCatch": "off"
			}
		}
	},
	"files": {
		"ignore": [
			"node_modules/",
			"coverage/",
			"public/",
			"dist/",
			".next",
			"*lock*",
			"README.md",
			"LICENS"
		]
	}
}
